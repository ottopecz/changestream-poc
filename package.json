{
  "name": "converge-exercise",
  "version": "1.0.0",
  "description": "Converge exercise",
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "maintenance:delete-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "maintenance:delete-dist": "find . -name '.dist' -type d -prune -exec rm -rf '{}' +",
    "start": "npm run start --workspaces --if-present",
    "test": "npm test --workspaces"
  },
  "keywords": [
    "converge",
    "exercise"
  ],
  "author": "Otto Pecz <otto.pecz.developer@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ottopecz/converge-exercise.git"
  },
  "bugs": {
    "url": "https://github.com/ottopecz/converge-exercise/issues"
  },
  "homepage": "https://github.com/ottopecz/converge-exercise#README.md",
  "workspaces": [
    "services/sensor-data",
    "services/notifications",
    "libraries/errors",
    "libraries/logger",
    "libraries/mongo-driver",
    "libraries/middleware"
  ],
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "node-notifier": "^10.0.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  }
}
